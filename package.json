  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luoxue-victor/learn_webpack/issues"
  },
  "homepage": "https://github.com/luoxue-victor/learn_webpack#readme",
  "dependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "ora": "^4.0.3",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.1",
    "webpack": "^4.41.5",
    "webpack-dashboard": "^3.2.0"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "commitlint": "^8.3.5",
